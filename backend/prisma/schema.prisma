generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
}

enum Occupation {
  developer
  sales
  hr
  management
  customer_success
  tester
}

model Employee {
  id  Int   @id @default(autoincrement())
  firstname String
  lastname String
  age Int
  occupation Occupation
  salary Int
  employed DateTime
}