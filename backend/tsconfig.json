{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    "lib": ["ES2020"],
    "types": ["node"],

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,

    "verbatimModuleSyntax": false,

    "allowJs": false,
    "resolveJsonModule": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "isolatedModules": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
